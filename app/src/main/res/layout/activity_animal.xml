<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="7dp"
        android:weightSum="2">
        <TextView
            android:gravity="center"
            android:textColor="#000080"
            android:textSize="18dp"
            android:text="Name :"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/animal_name"
            android:gravity="left"
            android:textColor="#000080"
            android:textSize="18dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/left"
            android:src="@drawable/left"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/image_show"
            android:layout_toLeftOf="@+id/image_show"
            android:layout_marginRight="20dp"
            android:layout_toStartOf="@+id/image_show" />
        <ImageView
            android:id="@+id/image_show"
            android:layout_width="210dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/image_border"
            android:src="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/right"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/image_show"
            android:layout_toEndOf="@+id/image_show"
            android:layout_toRightOf="@+id/image_show"
            android:layout_marginLeft="20dp"
            android:src="@drawable/right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/left"
            android:layout_marginTop="14dp"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description :"
                android:textColor="#52be83"
                android:textSize="18dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/image_border"
                android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/description_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:textColor="#000080"
                android:padding="5dp"/>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>